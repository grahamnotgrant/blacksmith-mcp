{
  "name": "blacksmith-mcp",
  "version": "0.1.0",
  "description": "MCP server for Blacksmith CI analytics",
  "keywords": [
    "mcp",
    "blacksmith",
    "ci",
    "github-actions",
    "claude",
    "model-context-protocol"
  ],
  "license": "MIT",
  "author": "Graham Huber",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grahamnotgrant/blacksmith-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/grahamnotgrant/blacksmith-mcp/issues"
  },
  "homepage": "https://github.com/grahamnotgrant/blacksmith-mcp#readme",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "blacksmith-mcp": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
